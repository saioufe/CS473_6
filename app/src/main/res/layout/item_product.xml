<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:layout_rowWeight="1"
    android:layout_columnWeight="1"
    android:elevation="10dp"
    android:outlineAmbientShadowColor="@color/card_shadow"
    android:outlineSpotShadowColor="@color/card_shadow"
    app:cardCornerRadius="20dp"
    android:id="@+id/grid_element"
    android:layout_margin="10dp"

    app:cardElevation="10dp">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="15dp"
        >

        <androidx.cardview.widget.CardView
            android:layout_width="100dp"
            android:layout_height="match_parent"
            app:cardElevation="0dp"
            app:cardCornerRadius="4dp">

            <ImageView
                android:id="@+id/product_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"

                app:srcCompat="@drawable/product1" />

        </androidx.cardview.widget.CardView>



        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_marginStart="10dp"
            >

            <TextView
                android:id="@+id/product_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Echo Dot Kids Edition"
                android:textColor="#000000"
                android:textSize="18sp"

                android:textStyle="bold" />
            <TextView
                android:id="@+id/product_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$344.00"
                android:textColor="@color/blue"
                android:textSize="15sp"
                android:textStyle="bold"

                />

            <Space
                android:layout_width="match_parent"
                android:layout_height="23dp" />

            <TextView
                android:id="@+id/product_rec"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="+142 recommendations"
                android:textColor="@color/inactive_menu_item"
                android:textSize="11sp"
                android:textStyle="bold"
                tools:ignore="TextContrastCheck" />
        </LinearLayout>



    </LinearLayout>
</androidx.cardview.widget.CardView>